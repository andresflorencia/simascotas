<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorDate</item>
        <item name="colorPrimaryDark">@color/colorDate</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:textColorSecondary">@android:color/darker_gray</item>
        <item name="android:navigationBarColor">@color/colorDate</item>
    </style>

    <style name="Theme.AppCompat.Light.NoActionBar.FullScreen"
        parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="ClienteTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorDate</item>
        <item name="colorPrimaryDark">@color/colorDate</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowActionBar">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:navigationBarColor">@color/colorDate</item>
    </style>

    <style name="ProductTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/black_overlay2</item>
        <item name="colorPrimaryDark">@color/colorDate</item>
        <item name="colorAccent">@color/colorDate</item>
        <item name="android:windowActionBar">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:navigationBarColor">@color/colorDate</item>
    </style>

    <style name="AlertDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
    </style>

    <style name="EstiloText_Black">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textAlignment">viewStart</item>
    </style>
    <style name="EstiloText_Black2">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textAlignment">viewStart</item>
    </style>
    <style name="EstiloText_Black3">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAlignment">viewEnd</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="EditText_Round">
        <item name="android:padding">16dp</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:background">@drawable/border1</item>
    </style>
</resources>
