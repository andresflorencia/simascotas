<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    android:orientation="vertical"
    app:cardCornerRadius="6dp"
    app:cardElevation="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_NombreCliente"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="CONSUMIDOR FINAL"
                    android:textSize="15sp"
                    style="@style/EstiloText_Black2"
                    android:textStyle="bold"
                    android:paddingLeft="5dp"
                    android:maxLines="1"/>
                <ImageButton
                    android:id="@+id/btnPreview"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_eye"
                    android:tint="@color/colorDate"
                    android:background="@null"
                    android:visibility="gone"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/tv_NumeroComprobante"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="001-001-000000001"
                        android:textSize="16sp"
                        style="@style/EstiloText_Black2"
                        android:paddingLeft="3dp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:weightSum="3"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/tv_Total"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:text="Total: $0.00"
                            android:textSize="16sp"
                            android:textColor="@color/colorGray"
                            android:textAlignment="center"
                            android:layout_gravity="center"/>
                        <TextView
                            android:id="@+id/tv_Fecha"
                            android:layout_width="0dp"
                            android:layout_weight="2"
                            android:layout_height="wrap_content"
                            android:text="Fecha: 00/00/0000"
                            android:textSize="15sp"
                            android:textColor="@color/colorGray"/>
                    </LinearLayout>
                </LinearLayout>

                <ImageButton
                    android:id="@+id/btnAnular"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_delete2"
                    android:background="@null"/>
            </LinearLayout>
        </LinearLayout>

</androidx.cardview.widget.CardView>