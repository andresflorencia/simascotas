<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="0dp"
    android:orientation="vertical">


    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="5dp"
        app:cardCornerRadius="10dp"
        android:layout_margin="5dp"
        android:padding="5dp">
        <LinearLayout
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!--ENCABEZADO-->
            <LinearLayout android:id="@+id/lyEcabezado"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="8"
                android:paddingVertical="5dp"
                android:background="@color/colorDate">
                <TextView
                    android:id="@+id/txtNombre"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="7.4"
                    android:text="CONSUMIDOR FINAL"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"
                    android:layout_gravity="center_vertical"
                    android:paddingLeft="4dp"
                    android:drawableLeft="@drawable/ic_user"
                    android:drawableTint="@color/colorWhite"
                    android:drawablePadding="5dp"/>
                <ProgressBar
                    android:id="@+id/pbCargando"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_weight="0.3"
                    android:visibility="gone"/>
                <ImageButton
                    android:id="@+id/btnCerrar"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:src="@drawable/ic_close"
                    android:tint="@color/colorWhite"
                    android:background="@null"/>
            </LinearLayout>

            <!--CUERPO CLIENTE-->
            <LinearLayout android:id="@+id/lyCliente"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="5dp">
                <TextView android:id="@+id/txtNombreComercial"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="NOMBRE COMERCIAL"
                    android:textSize="15sp"
                    android:textColor="@android:color/black"
                    android:layout_marginHorizontal="5dp"
                    android:drawableLeft="@drawable/ic_market"
                    android:drawablePadding="5dp"/>
                <TextView android:id="@+id/txtNIP"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="CEDULA"
                    android:textSize="14sp"
                    android:textColor="@android:color/black"
                    android:layout_marginHorizontal="5dp"
                    android:drawableLeft="@drawable/ic_card"
                    android:drawablePadding="5dp"/>
                <TextView android:id="@+id/txtDireccion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="DIRECCION"
                    android:textSize="15sp"
                    android:textColor="@android:color/black"
                    android:layout_marginHorizontal="5dp"
                    android:drawableLeft="@drawable/ic_location"
                    android:drawablePadding="5dp"/>
                <TextView android:id="@+id/txtContacto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="TELEFONO"
                    android:textSize="15sp"
                    android:textColor="@android:color/black"
                    android:layout_marginHorizontal="5dp"
                    android:drawableLeft="@drawable/ic_call"
                    android:drawablePadding="5dp"/>
                <TextView android:id="@+id/txtCorreo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="CORREO"
                    android:textSize="14sp"
                    android:textColor="@android:color/black"
                    android:layout_marginHorizontal="5dp"
                    android:drawableLeft="@drawable/ic_mail_outline"
                    android:drawablePadding="5dp"/>
                <TextView android:id="@+id/txtCategoria"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="CATEGORIA"
                    android:textSize="14sp"
                    android:textColor="@android:color/black"
                    android:layout_marginHorizontal="5dp"
                    android:textAlignment="center"/>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>