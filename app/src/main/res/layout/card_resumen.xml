<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="3dp"
    android:layout_marginTop="2dp"
    android:layout_marginBottom="4dp"
    android:orientation="vertical"
    app:cardCornerRadius="6dp"
    app:cardElevation="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="5dp">

            <TextView
                android:id="@+id/tvDocumento"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="DOCUMENTO"
                style="@android:style/TextAppearance.Material.Title"
                android:textSize="17sp"
                android:textColor="@color/colorDate"
                android:textAlignment="center"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tvCantidad"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="0"
                    style="@android:style/TextAppearance.Material.Title"
                    android:textColor="@color/colorBlue"
                    android:textSize="30sp"
                    android:textAlignment="center"/>
                <TextView
                    android:id="@+id/tvCantidadNS"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="0"
                    style="@android:style/TextAppearance.Material.Title"
                    android:textColor="@color/colorend_splash"
                    android:drawableRight="@drawable/ic_cloud_arrow_up"
                    android:drawableTint="@color/colorend_splash"
                    android:paddingEnd="30dp"
                    android:paddingStart="20dp"
                    android:textSize="30sp"
                    android:textAlignment="center"/>
            </LinearLayout>
            <TextView
                android:id="@+id/tvTotal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Total: $0.00"
                style="@android:style/TextAppearance.Material.Body1"
                android:textColor="@color/colorPrimaryDark"
                android:textAlignment="center"/>
            <Button
                android:id="@+id/btnNewDocument"
                android:layout_width="150dp"
                android:layout_height="30dp"
                android:text="Nuevo"
                android:textColor="@color/colorWhite"
                android:background="@drawable/bg_btn_login"
                android:layout_marginHorizontal="10dp"
                android:layout_gravity="center"/>
        </LinearLayout>

</com.google.android.material.card.MaterialCardView>