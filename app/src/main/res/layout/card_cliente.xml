<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="4dp"
    android:layout_marginVertical="2dp"
    android:orientation="vertical"
    app:cardCornerRadius="6dp"
    app:cardElevation="5dp"
    android:id="@+id/cvCliente">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:padding="5dp">
        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/imgCliente"
            android:layout_width="0dp"
            android:layout_weight="0.3"
            android:layout_height="40dp"
            android:scaleType="centerCrop"
            app:riv_corner_radius="6dp"
            android:src="@drawable/ic_user"
            android:layout_gravity="center"
            android:visibility="gone"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginHorizontal="5dp">

            <TextView
                android:id="@+id/tv_RazonSocial"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="CONSUMIDOR FINAL"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="@color/colorPrimaryDark"
                android:drawableLeft="@drawable/ic_user"
                android:maxLines="1"/>

            <TextView
                android:id="@+id/tv_NombreComercial"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="NOMBRE COMERCIAL"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="15sp"
                android:drawableLeft="@drawable/ic_market"
                android:maxLines="1"/>
            <TextView
                android:id="@+id/tv_Direccion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="DirecciÃ³n"
                android:textSize="15sp"
                android:drawableLeft="@drawable/ic_location"
                android:maxLines="1"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_Contacto"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="099999999-052754756"
                    android:textSize="14sp"
                    android:textColor="@color/colorPrimaryDark"
                    android:drawableLeft="@drawable/ic_call"
                    android:layout_weight="2"/>
                <TextView
                    android:id="@+id/tv_Estado"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="No sincronizado"
                    android:textSize="14sp"
                    android:textColor="@color/colorend_splash"
                    android:layout_weight="1"
                    android:textAlignment="center"
                    android:textStyle="bold"/>
            </LinearLayout>
        </LinearLayout>


        <ImageButton
            android:id="@+id/btnNewDocument"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:src="@drawable/ic_options"
            android:background="@null"
            android:clickable="true" />
    </LinearLayout>

</androidx.cardview.widget.CardView>