<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="4dp"
    android:layout_marginVertical="2dp"
    android:orientation="vertical"
    app:cardCornerRadius="6dp"
    app:cardElevation="5dp"
    android:id="@+id/cvPropiedad">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:padding="5dp">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginHorizontal="5dp">

            <TextView
                android:id="@+id/tvNombrePropiedad"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="FINCA"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="@color/colorPrimaryDark"
                android:drawableLeft="@drawable/ic_market"/>

            <TextView
                android:id="@+id/tvPropietario"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="PROPIETARIO"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="15sp"
                android:drawableLeft="@drawable/ic_user"/>
            <TextView
                android:id="@+id/tvDireccion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Dirección"
                android:textSize="15sp"
                android:drawableLeft="@drawable/ic_location"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tvAdministrador"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="ADMINISTRADOR"
                    android:textSize="12sp"
                    android:textColor="@color/colorPrimaryDark"
                    android:drawableLeft="@drawable/ic_user"
                    android:layout_weight="3"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"/>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1.2"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/tvArea"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Área: 5Ha"
                        android:textSize="14sp"
                        android:textColor="@color/colorPrimaryDark"
                        android:textAlignment="center"/>
                    <TextView
                        android:id="@+id/tvEstado"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="No Sincronizado"
                        android:textSize="12sp"
                        android:textColor="@color/colorend_splash"
                        android:layout_weight="1"
                        android:textStyle="bold"
                        android:textAlignment="center"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>


        <ImageButton
            android:id="@+id/btnOpciones"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:src="@drawable/ic_options"
            android:background="@null"
            android:clickable="true" />
    </LinearLayout>

</androidx.cardview.widget.CardView>