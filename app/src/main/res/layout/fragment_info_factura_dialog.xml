<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="0dp"
    android:orientation="vertical"
    android:background="@android:color/transparent">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="5dp"
        app:cardCornerRadius="5dp"
        android:layout_margin="5dp"
        android:padding="5dp">
        <LinearLayout
            android:layout_width="380dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!--ENCABEZADO-->
            <LinearLayout android:id="@+id/lyEncabezado"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="8"
                android:background="@color/colornavheader"
                android:paddingVertical="3dp">
                <TextView
                    android:id="@+id/txtNumFactura"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="7.4"
                    android:text="NOMBRE PRODUCTO"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/colorWhite"
                    android:layout_gravity="center_vertical"
                    android:paddingLeft="4dp"
                    android:drawableLeft="@drawable/ic_shop"
                    android:drawableTint="@color/colorWhite"
                    android:drawablePadding="5dp"/>
                <ProgressBar
                    android:id="@+id/pbCargando"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_weight="0.3"
                    android:visibility="gone"/>
                <ImageButton
                    android:id="@+id/btnCerrar"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="0.3"
                    android:src="@drawable/ic_close"
                    android:tint="@color/colorWhite"
                    android:background="@null"/>
            </LinearLayout>

            <!--CUERPO ITEM-->
            <LinearLayout android:id="@+id/lyProducto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="5dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView android:id="@+id/txtInfoLeft"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="Info"
                        android:textSize="15sp"
                        android:textColor="@android:color/black"
                        android:layout_margin="5dp"
                        android:textStyle="bold"
                        android:drawablePadding="5dp"/>
                    <TextView android:id="@+id/txtInfoRight"
                        android:layout_width="0dp"
                        android:layout_weight="3"
                        android:layout_height="wrap_content"
                        android:text="Detalle"
                        android:textSize="15sp"
                        android:textColor="@android:color/black"
                        android:layout_margin="5dp"
                        android:drawablePadding="5dp"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/lyLotes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:text="CANT"
                            android:textStyle="bold"
                            android:textAlignment="center"
                            android:textColor="@android:color/black"/>
                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="3"
                            android:layout_height="wrap_content"
                            android:text="DETALLE"
                            android:textStyle="bold"
                            android:textAlignment="center"
                            android:textColor="@android:color/black"/>
                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:text="P. UNIT"
                            android:textAlignment="center"
                            android:textStyle="bold"
                            android:textColor="@android:color/black"/>
                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:text="TOTAL"
                            android:textAlignment="center"
                            android:textStyle="bold"
                            android:textColor="@android:color/black"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/lblCant"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textSize="13sp"
                            android:paddingRight="5dp"
                            android:textAlignment="textEnd"
                            android:textColor="@android:color/black"/>
                        <TextView
                            android:id="@+id/lblDetalle"
                            android:layout_width="0dp"
                            android:layout_weight="3"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textAlignment="center"
                            android:textSize="13sp"
                            android:textColor="@android:color/black"/>
                        <TextView
                            android:id="@+id/lblPUnit"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textSize="13sp"
                            android:textAlignment="textEnd"
                            android:paddingRight="5dp"
                            android:textColor="@android:color/black"/>
                        <TextView
                            android:id="@+id/lblSubtotal"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textSize="13sp"
                            android:textAlignment="textEnd"
                            android:paddingRight="5dp"
                            android:textColor="@android:color/black"/>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/lyReglasPrecio"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/lblTotalesLeft"
                            android:layout_width="0dp"
                            android:layout_weight="3"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textAlignment="textEnd"
                            android:paddingRight="10dp"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            android:textColor="@android:color/black"/>
                        <TextView
                            android:id="@+id/lblTotalesRight"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textSize="15sp"
                            android:textAlignment="textEnd"
                            android:paddingRight="5dp"
                            android:layout_marginRight="5dp"
                            android:textColor="@android:color/black"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>